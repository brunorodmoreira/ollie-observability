{
  "name": "vtex-io-logger",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "esbuild --bundle=src/index.ts --outfile=dist/index.js --format=cjs --minify --sourcemap --packages=external --platform=node",
    "build:esm": "esbuild --bundle=src/index.ts --outfile=dist/index.esm.js --format=esm --minify --sourcemap --packages=external --platform=node",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@vtex/api": "^6.46.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
